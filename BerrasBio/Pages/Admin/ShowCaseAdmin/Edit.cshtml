@page
@model BerrasBio.Pages.Admin.ShowCaseAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ShowCase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShowCase.Id" />
            <div class="form-group">
                <label asp-for="ShowCase.Starts" class="control-label"></label>
                <input asp-for="ShowCase.Starts" class="form-control" />
                <span asp-validation-for="ShowCase.Starts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowCase.AvailableSeats" class="control-label"></label>
                <input asp-for="ShowCase.AvailableSeats" class="form-control" />
                <span asp-validation-for="ShowCase.AvailableSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowCase.MovieId" class="control-label"></label>
                <select asp-for="ShowCase.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="ShowCase.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowCase.SalonId" class="control-label"></label>
                <select asp-for="ShowCase.SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
                <span asp-validation-for="ShowCase.SalonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
